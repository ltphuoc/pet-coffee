<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Unisales_MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
   

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg custom_nav-container navbar-dark myNav">
            <div class="container">
                
                <a class="navbar-brand text-uppercase font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">Pet's coffee</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse ml-5">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item pl-3">
                            <a class="nav-link" asp-area="" asp-controller="Categories" asp-action="Index">Category</a>
                        </li>
                                                <li class="nav-item pl-3">

                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                        </li>
                                              <li class="nav-item pl-3">

                            <a class="nav-link" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a>
                        </li>
                                                <li class="nav-item pl-3">

                            <a class="nav-link" asp-area="" asp-controller="OrderDetails" asp-action="Index">OrderDetails</a>
                        </li>
                                               <li class="nav-item pl-3">

                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Pet's coffee' - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
